@model List<Instructor>
@{
    ViewData["Title"] = "Index";
}


<h1>Index</h1>
<table class="table table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Salary</th>
        <th>Address</th>
        <th>Imag</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Salary</td>
            <td>@item.Address</td>
            <td>
                <img src="~/images/@item.Imag" style="width:80px; height:80px; object-fit:cover;" class="rounded-circle border" />

            </td>
           
        </tr>
    }
</table>

